# Environment Configuration

# Server Configuration
PORT=3000

# MySQL Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=tasks

# OpenProject API Configuration
# Replace with your OpenProject instance URL
OP_BASE_URL=https://your-openproject-instance.com

# Replace with your OpenProject API key
# To get an API key:
# 1. Go to your OpenProject instance
# 2. Navigate to My Account > Access Tokens
# 3. Create a new API key
OP_API_KEY=your_openproject_api_key_here

# OpenProject Sync Configuration
# The system automatically uses the API key owner for task filtering
# Maximum number of recent tasks to sync (default: 100)
OP_SYNC_LIMIT=100

# Projects to sync (comma-separated list of project name patterns)
# These will be matched as substrings in project names
OP_SYNC_PROJECTS=Freeman,Panther,Pens
 
# Sync interval in minutes for automatic synchronization (default: 30)
SYNC_INTERVAL_MINUTES=30

# Notifications (Telegram)
# Get a bot token from BotFather and set your target chat id (user or group)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Task change notifications
# Set to 'true' to receive notifications for new tasks
NOTIFY_NEW_TASKS=true
# Set to 'true' to receive notifications for task updates
NOTIFY_TASK_CHANGES=true